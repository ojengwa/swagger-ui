                        "name": "payment_date",
                        "in": "formData",
                        "description": "The date and time the payment was made. Format: `YYYY-MM-DD HH:MM:SS` e.g `2016-01-24 15:03:01`.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "payerid",
                        "in": "formData",
                        "description": "The PayerID of the account that made the payment - available in the bill information.",
                        "required": true,
                        "type": "string"
                    },
